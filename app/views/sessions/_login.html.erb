<div class="container justify-content-md-center">
    <div class="row">
        <div class="col-lg-4"></div>
        <div class="col-lg-4">
                <div class="p-5 col-lg ml-auto mr-auto">
                <div>
                    <div class="p-2">
                        <h2 class="title is-2 is-spaced has-text-centered">Sign In</h2>
                    </div>

                <div class="col-lg">
                    <div class="span6 offset3 pt-4 pb-4">
                    <%= form_for(:session, url: sessions_path) do |f| %>

                        <div class="p-1"><%= f.label :name %></div>
                        <div class="p-1"><%= f.text_field :name, class: "input", required: true %></div>

                        <div class="p-1"><%= f.submit "Sign in", class: "btn btn-large btn-primary" %></div>
                    <% end %>
                    </div>
                </div>
                </div>

                <div class="col-lg ml-auto mr-auto">
                    <div class="">
                        <%= "Don't have an account yet? " %>
                        <%= link_to "Sign Up", users_new_path %>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-4"></div>
    </div>
</div>
