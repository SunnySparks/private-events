<% provide(:title, @user.name) %>
<div class="section">
  <div class="container">
	<div class="columns is-centered">
      <div class="column is-4">
      <% if logged_in? %>
      <h1>Welcome, <%= current_user.name %>!</h1>
      <%= link_to "Log out", logout_path %>
    <% else %>
      <%= link_to "Log in", users_new_path %>
    <% end %>
      </div>
    </div>
  </div>
</div>


<div class="section">
  <div class="container">
	<div class="columns is-centered">
      <div class="column is-4">
        <h2 class="title is-2 is-spaced has-text-centered">Users</h2>
          <% @users.each do |user| %>
            <tr>
              <td><%= user.name %></td></br>
              <td><%= user.id %></td></br>
            </tr>
          <% end %>
      </div>
    </div>
  </div>
</div>



<div class="section">
  <div class="container">
	<div class="columns is-centered">
      <div class="column is-4">
      <h2 class="title is-2 is-spaced has-text-centered">My Events</h2>      
      <% if current_user.events.empty? %>
        <span>You haven't created any event yet,</span>
        <%= link_to "Create one!", new_event_url %>
      <% else %>
        <% @events.each do |event| %>
          <tr>
            <% if event.creator_id == session[:user_id] %>
              <td><%= link_to event.location, event_path(event) %></td></br>
              <td><%= event.date %></td></br>
            <% end %>
          </tr>   
        <% end %>
      <% end %>
      </div>
    </div>
  </div>
</div>

<div class="section">
  <div class="container">
	<div class="columns is-centered">
      <div class="column is-4">
        <h2 class="title is-2 is-spaced has-text-centered">Previous Events</h2>
        <% @events.past.each do |event| %>
          <tr>
              <td><%=link_to event.location, event_path(event) %></td></br>
              <td><%= event.date %></td></br>
          </tr>   
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="section">
  <div class="container">
	<div class="columns is-centered">
      <div class="column is-4">
        <h2 class="title is-2 is-spaced has-text-centered">Upcoming Events</h2>
        <% @events.upcoming.each do |event| %>
          <tr>
              <td><%=link_to event.location, event_path(event) %></td></br>
              <td><%= event.date %></td></br>
          </tr>   
        <% end %>
      </div>
    </div>
  </div>
</div>