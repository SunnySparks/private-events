<%= form_with(model: event, local: true) do |f| %>
    <div class="field">
        <div class="control">
        <%= f.label :description, class: "label" %>
        <%= f.text_field :description, class: "textarea" %>
        </div>
    </div>
    
    <div class="field">
    <div class="control">
      <%= f.submit "Event", class: "button is-primary is-large is-fullwidth" %>
    </div>
  </div>
<% end %>