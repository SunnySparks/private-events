<%= form_with(model: event, local: true) do |f| %>
    <div class="field">
        <div class="control">
        <%= f.label :location, class: "label" %>
        <%= f.text_field :location, class: "textarea", required: true %>
        </div>
    </div>

    <div class="field">
    <div class="control">
    <%= f.datetime_field :date, class: "input is-info", placeholder: "Date" %>
    </div>
    </div>

    <div class="field">
    <div class="control">
      <%= f.submit "Submit", class: "button s-large is-fullwidth btn btn-large btn-primary" %>
    </div>
  </div>
<% end %>