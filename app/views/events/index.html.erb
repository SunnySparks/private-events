<h1>Events#index</h1>
<p>Find me in app/views/events/index.html.erb</p>

<div class="section">
  <div class="container">
	<div class="columns is-centered">
      <div class="column is-4">
        <% @events.each do |event| %>
            <tr>
              <td><%= event.location %></td>
            </tr>
        <% end %>
      </div>
    </div>
  </div>
</div>




<div class="section">
  <div class="container">
	<div class="columns is-centered">
      <div class="column is-4">
        <h2 class="title is-2 is-spaced has-text-centered">Upcoming Events</h2>
        <%= @event.all %>
      </div>
    </div>
  </div>
</div>

<div class="section">
  <div class="container">
	<div class="columns is-centered">
      <div class="column is-4">
        <h2 class="title is-2 is-spaced has-text-centered">Previous Events</h2>
        <%= @event.all %>
      </div>
    </div>
  </div>
</div>